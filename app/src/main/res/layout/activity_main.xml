<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/grey"
    >

    <LinearLayout
        android:id="@+id/layout_horses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_start_race"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/text_view_horse1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Horse 1"
            android:textSize="18sp" />

        <ProgressBar
            android:id="@+id/progress_bar_horse1"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:max="100"
            android:progress="0" />

        <TextView
            android:id="@+id/text_view_horse2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Horse 2"
            android:textSize="18sp" />

        <ProgressBar
            android:id="@+id/progress_bar_horse2"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:max="100"
            android:progress="0" />

        <TextView
            android:id="@+id/text_view_horse3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Horse 3"
            android:textSize="18sp" />

        <ProgressBar
            android:id="@+id/progress_bar_horse3"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:max="100"
            android:progress="0" />

        <TextView
            android:id="@+id/text_view_horse4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Horse 4"
            android:textSize="18sp" />

        <ProgressBar
            android:id="@+id/progress_bar_horse4"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:max="100"
            android:progress="0" />

        <TextView
            android:id="@+id/text_view_horse5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Horse 5"
            android:textSize="18sp" />

        <ProgressBar
            android:id="@+id/progress_bar_horse5"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:max="100"
            android:progress="0" />

        <TextView
            android:id="@+id/text_view_horse6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Horse 6"
            android:textSize="18sp" />

        <ProgressBar
            android:id="@+id/progress_bar_horse6"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:max="100"
            android:progress="0" />

    </LinearLayout>

    <Button
        android:id="@+id/button_start_race"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Start Race"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
